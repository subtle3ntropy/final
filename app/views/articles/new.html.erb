<div class="wrapper">

<h1 class="ArticleNewHead">Add New Article</h1>


<%= form_for @article, :html => {:multipart => true} do |f| %>
	<div class="ArticleUpload">
		<br />
		<%= f.label :Title %><br>
			<%= f.text_field :name %><br><br>
		
		<%= f.label :Body%><br>
			<%= f.text_area :description, :size => "90x10" %>
		<br />

		<%= f.label :main_image %>
			<%= f.file_field :main_image %>

		<br/>
		<input type="submit" name="commit" value="Add Post">
	</div>


	


<% end %>
</div>